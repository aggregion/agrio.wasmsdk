message(STATUS "Setting up Agrio Wasm Toolchain")
set(CMAKE_SYSTEM_NAME WebAssembly)

set(AGRIO_CDT_VERSION "@VERSION_MAJOR@.@VERSION_MINOR@.@VERSION_PATCH@")
set(AGRIO_WASMSDK_VERSION "@VERSION_MAJOR@.@VERSION_MINOR@.@VERSION_PATCH@")

set(CLANG_DIR @CMAKE_BINARY_DIR@/AgrioClang-prefix/src/AgrioClang-build)

set(CMAKE_C_COMPILER "${CLANG_DIR}/bin/agrio-cc")
set(CMAKE_CXX_COMPILER "${CLANG_DIR}/bin/agrio-cpp")

set(CMAKE_C_FLAGS " -O3 -I@CMAKE_BINARY_DIR@/libraries/ -I@CMAKE_SOURCE_DIR@/libraries/boost/include -I@CMAKE_SOURCE_DIR@/libraries/libc++/libcxx/include -I@CMAKE_SOURCE_DIR@/libraries/libc/musl/include -I@CMAKE_SOURCE_DIR@/libraries -I@BOOST_ROOT@/include")
set(CMAKE_CXX_FLAGS " -O3 -I@CMAKE_BINARY_DIR@/libraries/ -I@CMAKE_SOURCE_DIR@/libraries/boost/include -I@CMAKE_SOURCE_DIR@/libraries/libc++/libcxx/include -I@CMAKE_SOURCE_DIR@/libraries/libc/musl/include -I@CMAKE_SOURCE_DIR@/libraries -I@BOOST_ROOT@/include --std=c++14 ")

set(WASM_LINKER "${CLANG_DIR}/bin/agrio-ld ")

set(CMAKE_C_LINK_EXECUTABLE "${WASM_LINKER} -L@CMAKE_BINARY_DIR@/libraries/agriolib -L@CMAKE_BINARY_DIR@/libraries/libc -L@CMAKE_BINARY_DIR@/libraries/libc++ -agrio-imports=@CMAKE_BINARY_DIR@/agrio.imports -agrio-pp-dir=@CMAKE_BINARY_DIR@/external/wabt <LINK_FLAGS> <OBJECTS> -o <TARGET> <LINK_LIBRARIES> -lagrio -lc++ -lc ")
set(CMAKE_CXX_LINK_EXECUTABLE "${WASM_LINKER} -L@CMAKE_BINARY_DIR@/libraries/agriolib -L@CMAKE_BINARY_DIR@/libraries/libc -L@CMAKE_BINARY_DIR@/libraries/libc++ -agrio-imports=@CMAKE_BINARY_DIR@/agrio.imports -agrio-pp-dir=@CMAKE_BINARY_DIR@/external/wabt <LINK_FLAGS> <OBJECTS> -o <TARGET> <LINK_LIBRARIES> -lagrio -lc++ -lc ")

set(CMAKE_AR "${CLANG_DIR}/bin/llvm-ar" CACHE PATH "ar" FORCE)
set(CMAKE_RANLIB "${CLANG_DIR}/bin/llvm-ranlib" CACHE PATH "ranlib" FORCE)

# hack for CMake on Linux
set(CMAKE_SHARED_LIBRARY_LINK_C_FLAGS)
set(CMAKE_SHARED_LIBRARY_LINK_CXX_FLAGS)

# hack for OSX
set(CMAKE_OSX_SYSROOT="${CLANG_DIR}/agrio.cdt")
set(CMAKE_OSX_DEPLOYMENT_TARGET="")
